<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:background="@color/main"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dm480"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm040"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/tab_backgroundone"
                    android:layout_width="@dimen/dm250"
                    android:layout_height="@dimen/dm003"
                    android:layout_weight="1"
                    android:background="@color/main_green"
                    android:visibility="visible" />

                <View
                    android:id="@+id/tab_backgroundtwo"
                    android:layout_width="@dimen/dm250"
                    android:layout_height="@dimen/dm003"
                    android:layout_weight="1"
                    android:background="@color/main_green"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dm500"
                android:layout_height="@dimen/dm060"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_common_task"
                    android:layout_width="@dimen/dm250"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onTabClick"
                    android:text="排期任务"
                    android:textColor="@color/main_green"
                    android:textSize="@dimen/dm027" />

                <TextView
                    android:id="@+id/text_settled_task"
                    android:layout_width="@dimen/dm250"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onTabClick"
                    android:text="随手拍"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dm027" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/uploaded_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>