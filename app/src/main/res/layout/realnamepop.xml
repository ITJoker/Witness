<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm330"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image_popup_sigh"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm100"
                android:text="请确认实名信息，一旦认证无法修改"
                android:textColor="@color/title_color_one"
                android:textSize="@dimen/dm027" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm015"
                android:layout_marginTop="@dimen/dm015"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="真实姓名："
                    android:textColor="@color/title_color_one"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/realnamepop_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="张三丰"
                    android:textColor="@color/title_color_one"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="身份证号："
                    android:textColor="@color/title_color_one"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/realnamepop_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="110110199001011111"
                    android:textColor="@color/title_color_one"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm060"
                android:layout_marginLeft="@dimen/dm060"
                android:layout_marginRight="@dimen/dm060"
                android:layout_marginTop="@dimen/dm015"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/realname_qx_tv"
                    android:layout_width="@dimen/dm220"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_bead"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/title_color_two"
                    android:textSize="@dimen/dm030" />

                <View
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm000"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/realname_ok_tv"
                    android:layout_width="@dimen/dm220"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_main_green"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm030" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>