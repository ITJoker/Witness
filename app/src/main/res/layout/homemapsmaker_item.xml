<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeMapsMaker_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homemapsmaker_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm026"
        android:text="北京市朝阳区定福庄路"
        android:textColor="#333333"
        android:textSize="@dimen/dm024" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginLeft="@dimen/dm020"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:src="@drawable/jinbihui" />

        <TextView
            android:id="@+id/homemapsmaker_price_tv"
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm014"
            android:layout_marginTop="@dimen/dm023"
            android:layout_weight="1"
            android:text="600积分"
            android:textColor="#777777"
            android:textSize="@dimen/dm024" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm005"
                android:text="失效倒计时"
                android:textColor="#787878"
                android:textSize="@dimen/dm022" />

            <com.risenb.witness.views.citypicker.CountDownTimerView
                android:id="@+id/count_down_timer"
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>