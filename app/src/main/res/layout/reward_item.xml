<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm120"
    android:layout_marginLeft="@dimen/dm010"
    android:layout_marginRight="@dimen/dm010"
    android:background="@color/vip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm016"
        android:background="@color/main"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reward_logo_iv"
            android:layout_width="@dimen/dm070"
            android:layout_height="@dimen/dm070"
            android:layout_margin="@dimen/dm020"
            android:layout_marginLeft="@dimen/dm020"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/reward_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欧尚中秋礼盒代金券"
            android:textColor="#333333"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

</LinearLayout>