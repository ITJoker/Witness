<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm110"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dm000"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/moneyrecord_item_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/dm026"
                android:text="提现中"/>
            <TextView
                android:id="@+id/moneyrecord_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:layout_marginTop="@dimen/dm020"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>

        <TextView
            android:id="@+id/moneyrecord_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/dm028"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/vip"/>

</LinearLayout>