<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/main"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/document_group_tv"
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:gravity="center_vertical"
            android:padding="@dimen/dm020"
            android:paddingLeft="@dimen/dm030"
            android:text="如何更快更准确的完成任务？"
            android:textColor="#333333"
            android:textSize="@dimen/dm027" />

        <ImageView
            android:id="@+id/document_group_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm035" />
    </LinearLayout>
</LinearLayout>