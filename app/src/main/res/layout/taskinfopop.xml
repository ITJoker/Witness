<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_one"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm300"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image_popup_window_delete"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm120"
                android:text="该任务已被抢走"
                android:textColor="@color/title_color_one"
                android:textSize="@dimen/dm027" />

            <TextView
                android:id="@+id/robtaskfailpop_jixu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm060"
                android:background="@drawable/circular_green_stroke_login_bg"
                android:gravity="center"
                android:text="继续抢"
                android:textColor="#666666"
                android:textSize="@dimen/dm030" />
        </LinearLayout>

        <ImageView
            android:id="@+id/closepopwindow"
            android:layout_width="@dimen/dm090"
            android:layout_height="@dimen/dm090"
            android:layout_centerHorizontal="true"
            android:src="@drawable/robtaskfailpop_xx"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>