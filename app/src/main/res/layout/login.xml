<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.risenb.witness.views.newViews.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dm150"
                android:layout_height="@dimen/dm150"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm150"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <EditText
                android:id="@+id/login_username_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm040"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入用户名"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="#4D4D4D"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/dm027"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:background="#eeeeee" />

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="#4D4D4D"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/dm027"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/login_login_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm030"
                android:background="@drawable/circular_gray_login_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/dm030"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm030"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_register_tv"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm090"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="点击注册"
                    android:textColor="#379BA0"
                    android:textSize="@dimen/dm027"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/login_retrieve_tv"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dm090"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无法登录？"
                    android:textColor="#777777"
                    android:textSize="@dimen/dm027"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </com.risenb.witness.views.newViews.MyScrollView>
</LinearLayout>