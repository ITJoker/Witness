<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.risenb.witness.views.newViews.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/vipchangepass_jiu_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:layout_marginTop="@dimen/dm060"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="当前密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dm020"
                android:textColor="@color/title_color_one"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/dm027" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/background" />

            <EditText
                android:id="@+id/vipchangepass_xin_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dm020"
                android:textColor="@color/title_color_one"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/dm027" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/background" />

            <EditText
                android:id="@+id/vipchangepass_qrxin_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dm020"
                android:textColor="@color/title_color_one"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/dm027" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/background" />

            <TextView
                android:id="@+id/vipchangepass_ok_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm180"
                android:background="@drawable/circular_green_login_bg"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/dm030" />
        </LinearLayout>
    </com.risenb.witness.views.newViews.MyScrollView>
</LinearLayout>