<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vip"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <EditText
        android:id="@+id/feedback_submit_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm400"
        android:background="@drawable/yuanjiao"
        android:gravity="top"
        android:hint="请输入您的意见或建议"
        android:padding="@dimen/dm010"
        android:paddingLeft="@dimen/dm010"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="@dimen/dm024" />


    <TextView
        android:id="@+id/feedback_submit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dm090"
        android:layout_marginRight="@dimen/dm090"
        android:layout_marginTop="@dimen/dm090"
        android:background="@drawable/circular_green_login_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/dm030" />
</LinearLayout>