<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/title" />

            <CheckBox
                android:id="@+id/all_selection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm066"
                android:background="@color/background"
                android:text="全选"
                android:textColor="@color/title_color_one"
                android:textSize="@dimen/dm030"
                android:theme="@style/MyCheckBox"
                android:visibility="gone" />

            <ListView
                android:id="@+id/upload_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/background" />

            <Button
                android:id="@+id/upload_batchtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dm020"
                android:text="批量上传"
                android:textColor="@color/main_green"
                android:textSize="@dimen/dm030" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>