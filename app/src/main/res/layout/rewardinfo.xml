<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rewardinfo"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.risenb.witness.views.newViews.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rewardinfo_logo_iv"
                android:layout_width="@dimen/dm070"
                android:layout_height="@dimen/dm070"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm056"
                android:src="@drawable/default_user" />

            <TextView
                android:id="@+id/rewardinfo_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm016"
                android:text="味多美（国贸店）代金券"
                android:textColor="#333333"
                android:textSize="@dimen/dm026" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginRight="@dimen/dm070"
                android:layout_marginTop="@dimen/dm035"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券面额"
                    android:textColor="#777777"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="代金券"
                    android:textColor="#777777"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginRight="@dimen/dm070"
                android:layout_marginTop="@dimen/dm020"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30元"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Y36IDJ38D72"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm060"
                android:text="有效期"
                android:textColor="#777777"
                android:textSize="@dimen/dm022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm020"
                android:text="领取时间-2016-10-10"
                android:textColor="#333333"
                android:textSize="@dimen/dm022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm030"
                android:background="@drawable/circular_green_login_bg"
                android:gravity="center"
                android:text="马上去购买"
                android:textColor="@color/white"
                android:textSize="@dimen/dm030" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm065"
                android:text="使用方法"
                android:textColor="#777777"
                android:textSize="@dimen/dm022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm005"
                android:text="1.本券结账前请出示。"
                android:textColor="#333333"
                android:textSize="@dimen/dm022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm005"
                android:text="2.本券不兑换现金、不找零。"
                android:textColor="#333333"
                android:textSize="@dimen/dm022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginTop="@dimen/dm005"
                android:text="3.使用本券消费时，不含酒水。"
                android:textColor="#333333"
                android:textSize="@dimen/dm022" />

        </LinearLayout>
    </com.risenb.witness.views.newViews.MyScrollView>

</LinearLayout>