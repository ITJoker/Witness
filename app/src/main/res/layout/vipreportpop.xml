<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_one"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm360"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/clearcachepop"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vipreport_llll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm120"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fenxiang_qq_ll"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm080"
                        android:layout_height="@dimen/dm080"
                        android:src="@drawable/vipreport_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm015"
                        android:text="QQ好友"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fenxiang_wx_ll"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm080"
                        android:layout_height="@dimen/dm080"
                        android:src="@drawable/vipreport_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm015"
                        android:text="微信"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fenxiang_pyq_ll"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm080"
                        android:layout_height="@dimen/dm080"
                        android:src="@drawable/vipreport_pengyouquan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm015"
                        android:text="朋友圈"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fenxiang_wb_ll"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm080"
                        android:layout_height="@dimen/dm080"
                        android:src="@drawable/vipreport_weibo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm015"
                        android:text="微博"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm090"
                android:layout_marginRight="@dimen/dm090"
                android:layout_marginTop="@dimen/dm030"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vipreportpop_qx_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_green_stroke_login_bg"
                    android:gravity="center"
                    android:textSize="@dimen/dm030"
                    android:text="取消"
                    android:textColor="@color/title_color_two" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm100"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vipreport_fenxiang" />
    </RelativeLayout>
</RelativeLayout>